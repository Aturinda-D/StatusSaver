#: kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex

<HomeScreen>:
	AnchorLayout:
		anchor_x: 'center' 
		anchor_y: 'center'
		padding: 20, 30
		BoxLayout:
			orientation: 'vertical'
			padding: [20, 70]
			spacing: 40
			MDCard:
				size_hint_y: .25
				theme_bg_color: 'Custom'
				md_bg_color: hex('#05b025')
				FloatLayout:
					Image:
						source:'whatsapp-icon.png'
						size_hint: (.2, .2)
						pos_hint: {'center_x': .1, 'center_y': .8}
					Label:
						text: 'Status Saver'
						color: 1, 1, 1, 1
						font_size: 80
						bold: True
						pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .325
				ripple_behavior: True
				md_bg_color: hex('#e0e0e0')
				on_release: root.change_screen('video_screen')
				Image:
					source: 'video-play-icon.png'
					size_hint: (.5, .5)
					pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .325
				ripple_behavior: True
				md_bg_color: hex('#e0e0e0')
				on_release: root.change_screen('image_screen')
				Image:
					source: 'green_pic_icon2.png'
					size_hint: (.5, .5)
					pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .1
				ripple_behavior: True
				theme_bg_color: 'Custom'
				md_bg_color: hex('#05b025')
				Label:
					text: 'Open WhatApp'
					color: 1, 1, 1, 1
					font_size: 50
					bold: True



<ImageScreen>:
	BoxLayout:
		orientation: 'vertical'
		padding: 30
		spacing: 30
		MDSegmentedButton:
			multiselect: False
			type: 'large'
			size_hint_x: .6
			size_hint_y: None
			height: 80
			pos_hint: {'center_x': .5}
			opening_icon_duration: 0
			hiding_icon_duration: 0
			CustomSegment:
				selected_color: hex('#05b025')
				radius: [30, 0, 0, 30]
				theme_line_color: 'Custom'
				line_color: hex('#05b025')
				on_state:
					root.ids.all.color = hex('#ffffff')
					root.ids.saved.color = hex('#05b025')
					root.change_content('all_tab')
				MDSegmentButtonLabel:
					id: all
					text: 'All'
					bold: True
					selected_icon: ""
					theme_text_color: 'Custom'
					color: hex('#05b025')
			CustomSegment:
				selected_color: hex('#05b025')
				radius: [0, 30, 30, 0]
				theme_line_color: 'Custom'
				line_color: hex('#05b025')
				on_state:
					root.ids.saved.color = hex('#ffffff')
					root.ids.all.color = hex('#05b025')
					root.change_content('saved_tab')
				MDSegmentButtonLabel:
					id: saved
					text: 'Saved'
					bold: True
					theme_text_color: 'Custom'
					color: hex('#05b025')
		RecycleView:
			id: view_port
			do_scroll_x: False
			GridLayout:
				id: layout
				cols: 2
				padding: (15, 30)
				spacing: 30
				size_hint_y: None
				pos_hint: {'center_x': .5, 'center_y': .5}
				height: self.minimum_height

