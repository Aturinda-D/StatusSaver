#: kivy 2.0.0
#:import hex kivy.utils.get_color_from_hex

<HomeScreen>:
	AnchorLayout:
		anchor_x: 'center' 
		anchor_y: 'center'
		padding: 20, 30
		BoxLayout:
			orientation: 'vertical'
			padding: [20, 70]
			spacing: 40
			MDCard:
				size_hint_y: .25
				theme_bg_color: 'Custom'
				md_bg_color: hex('#05b025')
				FloatLayout:
					Image:
						source:'whatsapp-icon.png'
						size_hint: (.2, .2)
						pos_hint: {'center_x': .1, 'center_y': .8}
					Label:
						text: 'Status Saver'
						color: 1, 1, 1, 1
						font_size: 80
						bold: True
						pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .325
				ripple_behavior: True
				md_bg_color: hex('#e0e0e0')
				Image:
					source: 'video-play-icon.png'
					size_hint: (.5, .5)
					pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .325
				ripple_behavior: True
				md_bg_color: hex('#e0e0e0')
				on_press: root.picture()
				Image:
					source: 'green_pic_icon2.png'
					size_hint: (.5, .5)
					pos_hint: {'center_x': .5, 'center_y': .5}
			MDCard:
				size_hint_y: .1
				ripple_behavior: True
				theme_bg_color: 'Custom'
				md_bg_color: hex('#05b025')
				Label:
					text: 'Open WhatApp'
					color: 1, 1, 1, 1
					font_size: 50
					bold: True



<ImageScreen>:
	BoxLayout:
		orientation: 'vertical'
		padding: 30
		spacing: 30
		MDCard:
			size_hint: (None, None)
			height: 80
			width: 400
			pos_hint: {'center_x': .5}
			radius: 40
			style: 'outlined'
			theme_bg_color: 'Custom'
			md_bg_color: (1, 1, 1, 0)
			MDCard:
				radius: (40, 0, 0, 40)
				style: 'filled'
				theme_bg_color: 'Custom'
				md_bg_color: hex('#05b025')
				Label:
					text: 'All'
					color: (1, 1, 1, 1)
					bold: True
			MDCard:
				radius: (0, 40, 40, 0)
				style: 'filled'
				theme_bg_color: 'Custom'
				md_bg_color: (1, 1, 1, 0)
				Label:
					text: 'Saved'
					color: hex('#05b025')
					bold: True
		RecycleView:
			id: view_port
			do_scroll_x: False
			GridLayout:
				id: layout
				cols: 2
				padding: (15, 30)
				spacing: 30
				size_hint_y: None
				pos_hint: {'center_x': .5, 'center_y': .5}
				height: self.minimum_height

<ImageViewer>:
	BoxLayout:
		orientation: 'vertical'
		FloatLayout:
			Image:
				id: view_img
				size: self.size
				pos_hint: {'center_x': .5, 'center_y': .5}
				source: ('sample_image.jpg')
			MDButton:
				style: "tonal"
				pos_hint: {'center_x': .08, 'center_y': .9}
				on_press: root.contract()
				MDButtonText:
					text: '< Back'
		BoxLayout:
			size_hint_y: None
			height: 80
			orientation: 'horizontal'
			padding: 0, 10
			spacing: 30
			Widget:
			MDButton:
				style: "tonal"
				pos_hint: {'center_x': .5}
				MDButtonText:
					text: '<<< Prev'
			MDButton:
				style: "tonal"
				pos_hint: {'center_x': .5}
				MDButtonText:
					text: 'Save'
			MDButton:
				style: "tonal"
				pos_hint: {'center_x': .5}
				MDButtonText:
					text: 'Next >>>'
			Widget:

