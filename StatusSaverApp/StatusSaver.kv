			Widget:


<VideoPopup>:
	size_hint: (1, 1)
	auto_dismiss: True
	radius: 10
	overlay_color: (.5, .5, .5, .3)
	background_color: (.8, 1, .8, .4)
	background: ''
	RelativeLayout:
		padding: [10, 10, 10, 10]
		Video:
			id: video
			size_hint: (1, 1)
			source: root.video_source
			state: 'pause'
			on_eos: root.end_of_video(self)
		MDButton:
			style: 'text'
			radius: 0
			size_hint: (.15, .15)
			pos_hint: {'left': 1, 'top': 1}
			on_release: root.close_popup()
			MDButtonIcon:
				icon: 'arrow-left'
				color: (0, 1, 0, 1)
		ProgressBar:
			canvas.before:
				Color: 
					rgba: (.8, 1, .8, 1)
				Rectangle: 
					pos: self.pos
					size: self.size
			canvas: 
				Color: 
					rgba: (0, 1, 0, 1)
				Rectangle: 
					pos: self.pos
					size: (self.width*(self.value/float(self.max)), self.height)
			id: progress_bar
			max: 100
			value: root.progress
			pos_hint: {'top': .97, 'center_x': .5}
			size_hint_x: .7
			size_hint_y: None
			height: 4
			
		MDButton:
			style: 'text'
			radius: 0
			size_hint: (.15, .15)
			pos_hint: {'right': 1, 'top': 1}
			on_release: pass
			MDButtonIcon:
				icon: 'download'
				color: (0, 1, 0, 1)
		MDButton:
			id: play_previous_button
			style: 'text'
			size_hint: (.2, .2)
			pos_hint: {'bottom': 1, 'center_x': .3}
			radius: 0
			on_release: root.play_previous()
			MDButtonIcon:
				icon: 'skip-previous'
				color: (0, 1, 0, 1)
		MDButton:
			id: play_pause_button
			style: 'text'
			size_hint: (.2, .2)
			pos_hint: {'bottom': 1, 'center_x': .5}
			radius: 0
			on_release: root.play_pause()
			MDButtonIcon:
				id: icon_play
				icon: 'play' if video.state=='pause' else 'pause'
				color: (0, 1, 0, 1)
		MDButton:
			id: play_next_button
			style: 'text'
			size_hint: (.2, .2)
			pos_hint: {'bottom': 1, 'center_x': .7}
			radius: 0
			on_release: root.play_next()
			MDButtonIcon:
				icon: 'skip-next'
				color: (0, 1, 0, 1)


<ImageCard>:
	size_hint_y: None
	height: 300
	style: 'filled'
	theme_bg_color: 'Custom'
	md_bg_color: (0, 0, 0, .05)
	on_release:
		src = self.children[0].source
		self.parent.parent.parent.parent.expand(src)

<VideoCard>:
	size_hint_y: None
	height: 300
	style: 'filled'
	theme_bg_color: 'Custom'
	md_bg_color: (0, 0, 0, .05)
	on_release:
		src = self.vid_src
		self.parent.parent.parent.parent.expand(src)